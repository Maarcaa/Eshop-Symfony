{% for label, messages in app.flashes %}
	{% for message in messages %} 
    {# Le 'message' est une variable, il est celui que nous récupérons dans la fonction addflash 'vous êtes incrit avec succès #}

		<div
			class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
			{# Pas de "=" en twig dans les ocnditions #}
			{% if label is same as 'success' %}
				<span class="alert-inner--icon">
					<i class="fa fa-thumbs-up"></i>
				</span>
			{% else %}
				<span class="alert-inner--icon">
					<i class="fa fa-thumbs-down"></i>
				</span>
			{% endif %}
			<span class="alert-inner--text">
				<strong>{{ label | title }}
					:
				</strong>
				{{ message }}</span>
		</div>

	{% endfor %}
{% endfor %}
